[
  {% for post in site.posts %}
  {
    "title": "{{ post.title | escape }}",
    "url": "{{ post.url | relative_url }}",
    "date": "{{ post.date | date: '%Y-%m-%d' }}",
    "content": "{{ post.content | strip_html | escape | remove: '\n' | remove: '\r' }}"
  }
  {% if forloop.last %}{% else %},{% endif %}
  {% endfor %}
]
